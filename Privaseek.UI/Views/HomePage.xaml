<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Privaseek.UI.Views.HomePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:domain="clr-namespace:Privaseek.Domain.ValueObjects;assembly=Privaseek.Domain"
    xmlns:viewModels="clr-namespace:Privaseek.UI.ViewModels"
    Title="Privaseek"
    x:DataType="viewModels:SearchViewModel">

    <!--<ContentPage.BindingContext>
        <viewModels:SearchViewModel />
    </ContentPage.BindingContext>-->

    <VerticalStackLayout Padding="16" Spacing="12">
        <!--  Barre de recherche avec commande  -->
        <SearchBar
            Placeholder="Rechercher…"
            SearchCommand="{Binding SearchCommand}"
            SearchCommandParameter="{Binding Query}"
            Text="{Binding Query}" />

        <!--  Indicateur de chargement  -->
        <ActivityIndicator
            HeightRequest="32"
            IsRunning="{Binding IsLoading}"
            IsVisible="{Binding IsLoading}" />

        <!--  Résultats sous forme de cartes  -->
        <CollectionView ItemsSource="{Binding Results}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="domain:ResultItem">
                    <Frame
                        Margin="0,4"
                        Padding="12"
                        CornerRadius="12"
                        HasShadow="True">
                        <HorizontalStackLayout>
                            <Image
                                HeightRequest="32"
                                Source="{Binding Icon}"
                                WidthRequest="32" />

                            <VerticalStackLayout Margin="8,0">
                                <Label FontAttributes="Bold" Text="{Binding Title}" />
                                <Label FontSize="12" Text="{Binding Subtitle}" />
                            </VerticalStackLayout>

                            <Label
                                HorizontalOptions="EndAndExpand"
                                Text="{Binding Score, StringFormat='{}{0:P0}'}"
                                VerticalOptions="Center" />
                        </HorizontalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>